= form_for [@project, @hook] do |f|
  - if @hook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hook.errors.count, "error")} prohibited this hook from being saved:"
      %ul
        - @hook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.select :type, Hook::TYPES
  .field
    = f.label :data
    = f.text_area :data
  .actions
    = f.submit 'Save'
