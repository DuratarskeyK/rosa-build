%p#file-name1
  = link_to @project.name, tree_path(@project, treeish: @treeish)
  = File::SEPARATOR
  - if @path.present?
    - paths = File.split(@path)
    - if paths.size > 1 and paths.first != '.'
      - iterate_path(paths.first) do |path, name|
        = link_to(name, tree_path(@project, @treeish, path))
        = File::SEPARATOR
    = paths.last
