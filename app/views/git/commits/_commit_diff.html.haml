.block
  .content
    .inner

      %a{ :name => h(commit_diff.a_path) }

      .blob_header
        .size= h(commit_diff.a_path)
        - if commit_diff.b_path.present?
          .buttons
            = link_to("view file @ #{short_hash_id(@commit.id)}", blob_commit_path(@project, @commit.id, commit_diff.b_path))
        .clear

      .diff_data
        = render_diff(commit_diff)
